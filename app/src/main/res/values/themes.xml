<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChipsDevelopment" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/exo2regular</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
<!--        <item name="colorPrimary">@color/crayola_material</item>-->
        <item name="colorPrimaryVariant">@color/white_material</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/white_material</item>

<!--        <item name="android:text">?attr/colorOnPrimary</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="my_progressbar_style_ver" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/vertical_progress_bar</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>
</resources>